{
  "name": "lanyao-terminal",
  "version": "1.0.0",
  "description": "澜鳐控制终端 - 基于 Electron + Vue 的物联网设备控制平台",
  "main": "dist-electron/electron/main.js",
  "scripts": {
    "dev": "vite --config build/vite.config.ts",
    "build": "vite build --config build/vite.config.ts",
    "preview": "vite preview --config build/vite.config.ts",
    "electron:dev": "tsc -p tsconfig.node.json && vite build --config build/vite.config.ts && electron dist-electron/electron/main.js",
    "electron:build": "vite build --config build/vite.config.ts && electron-builder"
  },
  "dependencies": {
    "axios": "^1.13.2",
    "element-plus": "^2.11.9",
    "pinia": "^3.0.4",
    "sqlite3": "^5.1.7",
    "vue": "^3.5.25",
    "vue-router": "^4.6.3",
    "winston": "^3.18.3",
    "ws": "^8.18.3"
  },
  "devDependencies": {
    "@types/ws": "^8.18.1",
    "@vitejs/plugin-vue": "^6.0.2",
    "electron": "^39.2.4",
    "electron-builder": "^26.0.12",
    "electron-devtools-installer": "^4.0.0",
    "electron-rebuild": "^3.2.9",
    "eslint": "^9.39.1",
    "prettier": "^3.7.3",
    "typescript": "^5.9.3",
    "vite": "^7.2.6",
    "vite-plugin-electron": "^0.29.0",
    "vue-tsc": "^3.1.5"
  },
  "keywords": [
    "electron",
    "vue",
    "iot",
    "terminal"
  ],
  "author": "",
  "license": "MIT"
}
